# === App ===
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3001
FRONT_URL=http://localhost:5173
APP_NAME=Centrum Szkoleń

# === Auth / Cookies ===
JWT_SECRET=super_secret_change_me
ACCESS_TTL_MIN=15
REFRESH_TTL_DAYS=7
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# === Database ===
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://app:app@localhost:5432/centrum

# === CORS ===
# W DEV serwujesz front na porcie 5173
CORS_ORIGIN=http://localhost:5173

# === Emails (SMTP) ===
# Puste w DEV — maile verify/reset pojawiają się w logach backendu
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@local

# === Payments (szkielet) ===
PAYMENTS_ENABLED=false
PAYMENTS_PROVIDER=P24
# Jeśli będziesz używać PayU/Przelewy24, tu podasz API keys

# === Security / CSP ===
# Dozwolone dodatkowe źródła (lista oddzielona przecinkami)
CSP_CONNECT_SRC=http://localhost:3001
CSP_IMG_SRC=
CSP_FRAME_SRC=

# === Sentry (opcjonalnie monitoring) ===
SENTRY_DSN=

# === Rate limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=60

# === Seed admin (jednorazowo w DEV) ===
SEED_ADMIN=false
# SEED_ADMIN_EMAIL=admin@local
# SEED_ADMIN_PASS=admin123

# === Metrics protection (Prometheus) ===
# Ustaw losowy token i wywołuj /metrics z nagłówkiem: Authorization: Bearer <token>
METRICS_TOKEN=

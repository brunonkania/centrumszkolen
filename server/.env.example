# === App ===
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3001
FRONT_URL=http://localhost:5173

# === Auth / Cookies ===
JWT_SECRET=change_this_secret
ACCESS_TTL_MIN=15
REFRESH_TTL_DAYS=7
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# === Database ===
DATABASE_URL=postgres://user:pass@localhost:5432/centrum

# === CORS ===
# Lista dozwolonych originów (przecinek)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# === Emails (SMTP) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@local

# === Payments (skeleton) ===
PAYMENTS_ENABLED=false
PAYMENTS_PROVIDER=P24
# PAYU_... lub P24_... – dodasz jak będziesz włączał płatności

# === Security / CSP ===
# Dozwolone dodatkowe źródła (przecinek)
CSP_CONNECT_SRC=http://localhost:3001
CSP_IMG_SRC=
CSP_FRAME_SRC=

# === Sentry ===
SENTRY_DSN=

# === Rate limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=60

# === Seed admin (jednorazowo w DEV) ===
SEED_ADMIN=false
# SEED_ADMIN_EMAIL=admin@local
# SEED_ADMIN_PASS=admin123

# === Metrics protection ===
# Ustaw losowy token i wyślij go jako: Authorization: Bearer <token>
METRICS_TOKEN=
